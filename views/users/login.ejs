 <%- layout("/layouts/boilerplate")%>

<div class="row-home" >

    <h1 class="col-6 offset-3" style="padding-top: 1rem; padding-bottom: 1rem;">Login</h1>

    <div class="col-6 offset-3">
        <form action="/login" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
            <label for = "username" class="form-label" >Username</label>
            <input name = "username" id="username" type="text" class="form-control" style="border:1px solid #8b2f2f;" required>
            
        </div>

        <div class="mb-3">
            <label for = "password" class="form-label" >Password</label>
            <input name = "password" id="password" type="password" class="form-control" style="border:1px solid #8b2f2f;" required>
        </div>

        <button class="btn" style="background-color:#8b2f2f; color:#f5f0e1; margin-bottom: 2rem;">Login</button>

        </form>
    </div>
</div>