<%- layout("/layouts/boilerplate")%>
<div class="row" style="border: 2px solid #8b2f2f; border-radius: 2rem; margin-top: 1.5rem; ">
    <div class="col-8 offset-2">
        <br>
<h3>Create a new Listings</h3>
<br>

    <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        
        <div class="mb-3">
            <label for = "title" class="form-label" >Title</label>
            <input name = "listing[title]" placeholder="Add a title" type="text" class="form-control" style="border: 1px solid #8b2f2f;" required>
            <div class="valid-feedback">Title looks good</div>
        </div>

        <div class="mb-3">
            <label for = "description" class="form-label" >Description</label>
            <textarea name = "listing[description]" placeholder="Enter description" class="form-control" style="border: 1px solid #8b2f2f;" required></textarea>
            <div class="invalid-feedback">Please enter short description</div>
        </div>

        <div class="mb-3">
            <label for = "image" class="form-label">Upload Listing Image</label>
            <input name = "listing[image][url]"  type="file"class="form-control" style="border: 1px solid #8b2f2f;" >
        </div>

        <div class="row ">

        <div class="mb-3 col-md-4">
            <label for = "price" class="form-label" >Price</label>
            <input name = "listing[price]" placeholder="Enter price"  class="form-control" style="border: 1px solid #8b2f2f;" required>
            <div class="invalid-feedback">Price should be valid</div>
        </div>

        <div class="mb-3 col-md-8">
        <label for="category" class="form-label">Category</label>
        <select id="category" name="listing[category]" class="form-control" style="border: 1px solid #8b2f2f;" required>
          <option value="">Select a category</option>
          <option value="Trending">Trending</option>
          <option value="Rooms">Rooms</option>
          <option value="Iconic cities">Iconic cities</option>
          <option value="Mountains">Mountains</option>
          <option value="Castles">Castles</option>
          <option value="Amazing Pools">Amazing Pools</option>
          <option value="Camping">Camping</option>
          <option value="Farm">Farm</option>
          <option value="Arctic">Arctic</option>
          <option value="Domes">Domes</option>
          <option value="Boats">Boats</option>
        </select>
        <div class="invalid-feedback">Please select a valid category</div>
      </div>

        <div class="mb-3 col-md-8" >
            <label for = "country" class="form-label" >Country</label>
            <input name = "listing[country]" placeholder="Enter country" type="text" class="form-control" style="border: 1px solid #8b2f2f;" required>
            <div class="invalid-feedback">Country should be valid</div>
        </div>

    </div>

        <div class="mb-3">
            <label for = "location" class="form-label" >Location</label>
            <input name = "listing[location]" placeholder="Enter location" type="text" class="form-control" style="border: 1px solid #8b2f2f;" required>
            <div class="invalid-feedback">Location should be valid</div>
        </div>

        <br>

        <button class="btn" style="background-color:#8b2f2f; color:#f5f0e1; " >Add</button>

        <br>
        <br>

    </form>
</div>
</div>
