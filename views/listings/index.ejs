<%- layout("/layouts/boilerplate")%>

<style>
  #filters {
    display: flex;
    flex-wrap: wrap;
  }
  .filter{
    text-align: center;
    margin-right: 2rem;
    margin-top: 2rem;
    opacity: 0.7;
  }
  .filter:hover{
    opacity: 1;
    cursor: pointer;
  }
  .filter p {
    font-size: 0.8rem;
  }

  .tax-info{
    display: none;
  }

  .tax-toggle{
    border: 1px solid black;
    border-radius: 1rem;
    height: 3.25rem;
    padding: 1rem;
    margin-top: 1rem;
    margin-left: 2rem;
    display: flex;
    align-items: center;
  }

  a.filter {
  text-decoration: none;
  color: inherit;
}

</style>

<!-- ✅ Optional Message for Search Results -->
<% if (typeof searchQuery !== 'undefined' && allListings.length === 0) { %>
  <div class="alert alert-danger alert-dismissible fade show w-50 mx-auto mt-4 text-center" role="alert">
    No listings found for "<%= searchQuery %>"
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
  
  <% allListings = allListingsFromDB; %> <!-- fallback to original listings -->
<% } %>




<div id = "filters">
  <a href="/listings/category/Trending" class="filter">
    <div><i class="fa-solid fa-fire"></i></div>
      <p>Trending</p>
  </a>
  <a href="/listings/category/Rooms" class="filter">
    <div><i class="fa-solid fa-bed"></i></div>
      <p>Rooms</p>
  </a>
  <a href="/listings/category/Iconic%20cities" class="filter">
    <div><i class="fa-solid fa-mountain-city"></i></div>
      <p>Iconic Cities</p>
  </a>
  <a href="/listings/category/Mountains" class="filter">
    <div><i class="fa-solid fa-mountain"></i></div>
      <p>Mountain</p>
  </a>
  <a href="/listings/category/Castles" class="filter">
    <div><i class="fa-brands fa-fort-awesome"></i></div>
      <p>Castles</p>
  </a>
   <a href="/listings/category/Amazing%20Pools" class="filter">
    <div><i class="fa-solid fa-person-swimming"></i></div>
      <p>Amazing Pools</p>
   </a>
  <a href="/listings/category/Camping" class="filter">
    <div><i class="fa-solid fa-campground"></i></div>
      <p>Camping</p>
  </a>
  <a href="/listings/category/Farm" class="filter">
    <div><i class="fa-solid fa-cow"></i></div>
      <p>Farms</p>
  </a>
   <a href="/listings/category/Arctic" class="filter">
    <div><i class="fa-solid fa-snowflake"></i></div>
      <p>Arctic</p>
   </a>
  <a href="/listings/category/Domes" class="filter">
    <div><i class="fa-solid fa-igloo"></i></div>
      <p>Dome</p>
  </a>
   <a href="/listings/category/Boats" class="filter">
    <div><i class="fa-solid fa-ship"></i></div>
      <p>Boats</p>
   </a>

<div class="tax-toggle" style="border: 1px solid #8b2f2f;">
  <label class="form-check-label me-2" for="flexSwitchCheckDefault">Display Total after Taxes</label>
  <div class="form-check form-switch m-0">
    <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault" >
  </div>
</div>
</div>

<!-- ✅ Listings Grid -->
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
  <% for (let listing of allListings) { 
      let price = listing.price || 0;
  %>
    <a href="/listings/<%= listing._id %>" class="listing-link text-decoration-none text-dark">
      <div class="card col listing-card">
        <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem;">
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text" 
             data-title="<%= listing.title %>" 
             data-price="<%= price %>">
            <b><%= listing.title %><br></b>
            ₹<%= price.toLocaleString("en-IN") %> /night
            <i class="tax-info"> + 18% GST</i>
          </p>
        </div>
      </div>
    </a>
  <% } %>
</div>

<!-- ✅ GST Toggle Script -->
<script>
  document.addEventListener("DOMContentLoaded", () => {
    const taxSwitch = document.getElementById("flexSwitchCheckDefault");

    taxSwitch.addEventListener("change", () => {
      const cards = document.querySelectorAll(".listing-card");

      cards.forEach(card => {
        const priceEl = card.querySelector(".card-text");
        if (!priceEl) return;

        const originalTitle = priceEl.dataset.title;
        const originalPrice = parseFloat(priceEl.dataset.price);

        if (!originalTitle || isNaN(originalPrice)) return;

        if (taxSwitch.checked) {
          const gstPrice = Math.round(originalPrice * 1.18);
          priceEl.innerHTML = `
            <b>${originalTitle}<br></b>
            ₹${gstPrice.toLocaleString("en-IN")} /night (include 18% GST)
            <i class="tax-info"> (incl. GST)</i>
          `;
        } else {
          priceEl.innerHTML = `
            <b>${originalTitle}<br></b>
            ₹${originalPrice.toLocaleString("en-IN")} /night
            <i class="tax-info"> + 18% GST</i>
          `;
        }
      });
    });
  });
</script>
